{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Reclaim",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:11434/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.reclaim.local",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/domain-lists/*"
      ],
      "fileAssociations": [
        {
          "ext": ["mp4", "webm", "ogg", "mov", "avi", "mkv", "m4v"],
          "name": "Video",
          "description": "Video files",
          "role": "Viewer"
        },
        {
          "ext": ["jpg", "jpeg", "png", "gif", "webp", "bmp", "svg", "ico"],
          "name": "Image",
          "description": "Image files",
          "role": "Viewer"
        },
        {
          "ext": ["mp3", "wav", "flac", "m4a", "aac"],
          "name": "Audio",
          "description": "Audio files",
          "role": "Viewer"
        }
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Reclaim",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
