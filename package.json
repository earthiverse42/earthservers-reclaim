{
  "name": "earthservers-local",
  "version": "0.1.0",
  "private": true,
  "description": "EarthServers Local AI - Intelligent distribution of compute",
  "author": "EarthServers",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "turbo run test",
    "desktop": "pnpm --filter desktop dev",
    "desktop:build": "pnpm --filter desktop build"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.0"
}
